{
  "name": "text-adventure-engine",
  "version": "0.1.0",
  "description": "Node.js text adventure engine",
  "main": "index.js",
  "scripts": {
    "build": "babel src --out-dir dist",
    "eslint:fix": "eslint -c .eslintrc.json --fix src",
    "eslint:check": "eslint --print-config .eslintrc.json | eslint-config-prettier-check",
    "production": "node dist",
    "debug": "node --inspect -r babel-register src",
    "start": "node -r babel-register src",
    "start:watch": "nodemon -r babel-register src",
    "test": "ava"
  },
  "keywords": [
    "base",
    "javascript",
    "node.js"
  ],
  "author": "Jake Klassen",
  "license": "MIT",
  "ava": {
    "babel": "inherit",
    "failFast": true,
    "files": [
      "test/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "verbose": true
  },
  "devDependencies": {
    "ava": "^0.21.0",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-strict-mode": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-import-resolver-babel-module": "3.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^2.1.2",
    "faucet": "^0.0.1",
    "nodemon": "^1.11.0",
    "prettier": "^1.19.1"
  },
  "dependencies": {
    "chalk": "^2.3.0",
    "is_js": "^0.9.0",
    "sinon": "^4.1.1"
  }
}
