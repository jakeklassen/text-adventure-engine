{
  "name": "text-adventure-engine",
  "version": "0.1.0",
  "description": "Node.js text adventure engine",
  "main": "index.js",
  "scripts": {
    "build": "babel src --out-dir dist",
    "eslint:fix": "eslint -c .eslintrc.json --fix src",
    "eslint:check": "eslint --print-config .eslintrc.json | eslint-config-prettier-check",
    "production": "node dist",
    "debug": "node --inspect -r babel-register src",
    "start": "node -r babel-register src",
    "start:watch": "nodemon -r babel-register src",
    "test": "ava"
  },
  "keywords": [
    "base",
    "javascript",
    "node.js"
  ],
  "author": "Jake Klassen",
  "license": "MIT",
  "ava": {
    "babel": "inherit",
    "failFast": true,
    "files": [
      "test/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "verbose": true
  },
  "devDependencies": {
    "ava": "^0.21.0",
    "faucet": "^0.0.1",
    "nodemon": "^1.11.0",
    "prettier": "^1.19.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0"
  },
  "dependencies": {
    "@types/node": "^12.12.14",
    "chalk": "^2.3.0",
    "is_js": "^0.9.0",
    "sinon": "^4.1.1",
    "typescript": "^3.7.2"
  }
}
